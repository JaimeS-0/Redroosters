<form id="formRegistro" action="POST" class="w-full mt-8 md:mt-16 pb-32">
    <fieldset
        class="w-full flex flex-col items-center
           gap-2 md:gap-8
           rounded-3xl border border-gray-800
           bg-gradient-to-b from-gray-950 via-gray-900 to-gray-950
           text-white shadow-[0_0_40px_rgba(255,0,0,0.15)]
           px-6 py-10 md:px-12 md:py-20 mb-10 md:mb-16"
    >
        <legend class="sr-only">Formulario de registro</legend>

        <h2
            class="text-xl md:text-2xl font-semibold text-red-400 tracking-wide mb-2 md:mb-4"
        >
            Crea tu cuenta
        </h2>

        <div class="flex flex-col items-center gap-2 md:gap-4 w-full">
            <label
                for="registro-name"
                class="text-base md:text-xl text-gray-300"
            >
                Nombre *
            </label>
            <input
                id="registro-name"
                type="text"
                name="name"
                placeholder="Introduce tu nombre"
                class="w-3/4 md:w-3/4 py-3 md:py-5 px-4 md:px-6 rounded-2xl border border-gray-700 bg-gray-800/80 text-white
               placeholder-gray-500 text-base md:text-lg
               focus:border-red-400 focus:ring-2 focus:ring-red-500/40 focus:outline-none
               transition duration-300"
            />
            <p id="error-name" class="text-red-500 text-xs md:text-sm h-4"></p>
        </div>

        <div class="flex flex-col items-center gap-2 md:gap-4 w-full">
            <label
                for="registro-email"
                class="text-base md:text-xl text-gray-300"
            >
                Correo electronico *
            </label>
            <input
                id="registro-email"
                type="email"
                name="email"
                placeholder="Introduce tu correo electronico"
                class="w-3/4 md:w-3/4 py-3 md:py-5 px-4 md:px-6 rounded-2xl border border-gray-700 bg-gray-800/80 text-white
               placeholder-gray-500 text-base md:text-lg
               focus:border-red-400 focus:ring-2 focus:ring-red-500/40 focus:outline-none
               transition duration-300"
            />
            <p id="error-email" class="text-red-500 text-xs md:text-sm h-4"></p>
        </div>

        <div
            class="flex flex-col items-center gap-2 md:gap-4 w-full mt-1 md:mt-2"
        >
            <label for="password" class="text-base md:text-xl text-gray-300">
                Contrasena *
            </label>

            <div class="relative w-3/4 md:w-3/4">
                <input
                    id="registro-password"
                    type="password"
                    name="password"
                    placeholder="****************"
                    class="w-full py-3 md:py-5 px-4 md:px-6 rounded-2xl border border-gray-700 bg-gray-800/80 text-white
               placeholder-gray-500 text-base md:text-lg
               focus:border-red-400 focus:ring-2 focus:ring-red-500/40 focus:outline-none
               transition duration-300"
                />

                <button
                    type="button"
                    id="verContrasenaRegistro"
                    class="absolute inset-y-0 right-4 flex items-center text-gray-400 hover:text-red-400 transition"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.8"
                        stroke="currentColor"
                        class="w-6 h-6"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M3 3l18 18M2.25 12s3.75-6.75 9.75-6.75c2.01 0 3.78.53 5.32 1.3M19.5 8.25c1.73 1.28 2.25 2.07 2.25 2.07s-3.75 6.75-9.75 6.75c-2.01 0-3.78-.53-5.32-1.3"
                        ></path>
                    </svg>
                </button>
            </div>

            <p id="error-password" class="text-red-500 text-xs md:text-sm h-4">
            </p>
        </div>

        <p class="underline text-xs md:text-sm mt-2">
            * Los campos marcados son Obigatorios
        </p>

        <button
            type="submit"
            class="mt-10 w-1/4 block bg-red-500 hover:bg-red-600
             text-white font-semibold text-xl py-5 px-16 rounded-full
             transition-transform duration-300 hover:scale-105
             shadow-[0_0_25px_rgba(255,0,0,0.4)]"
        >
            Registrarme
        </button>

        <p id="registro-mensaje" class="text-green-500 text-center mt-4"></p>

        <p class="text-center text-gray-400 text-sm md:text-base mt-4 md:mt-6">
            Â¿Ya tienes una cuenta?
            <a
                href="#"
                id="linkLogin"
                class="text-red-400 hover:text-red-300 font-medium transition"
            >
                Inicia sesion aqui
            </a>
        </p>
    </fieldset>
</form>
