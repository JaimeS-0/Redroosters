---
const cardsArriba = [
    {
        key: "totalArtistas",
        titulo: "Artistas Totales",
        valor: "-",
    },
    {
        key: "totalCanciones",
        titulo: "Canciones Totales",
        valor: "-",
    },
    {
        key: "totalAlbumes",
        titulo: "Álbumes Totales",
        valor: "-",
    },
];

const cardsAbajo = [
    {
        key: "totalEscuchasGlobales",
        titulo: "Escuchas Globales",
        valor: "-",
    },
    {
        key: "cancionMasEscuchada",
        titulo: "Canción más escuchada",
        valor: "NO HAY DATOS",
    },
    {
        key: "cancionConMasLikes",
        titulo: "Canción con más likes",
        valor: "NO HAY DATOS",
    },
];
---

<div
    id="estadisticas-panel"
    class="w-full min-h-[60vh] flex items-center justify-center"
>
    <div class="w-full max-w-5xl flex flex-col gap-10">
        <!-- FILA 1 -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {
                cardsArriba.map((card: any) => (
                    <div
                        class="p-6 h-40 rounded-2xl border border-gray-700
                           bg-gradient-to-b from-gray-900/70 to-gray-800/70
                           backdrop-blur-sm
                           shadow-[0_0_25px_rgba(255,0,0,0.15)]
                           flex flex-col justify-center gap-2"
                    >
                        <p class="font-maximum text-gray-300 text-sm text-center underline">
                            {card.titulo}
                        </p>
                        <h2
                            class="text-4xl text-white text-center"
                            data-stat={card.key}
                        >
                            {card.valor}
                        </h2>
                    </div>
                ))
            }
        </div>

        <!-- FILA 2 -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {
                cardsAbajo.map((card: any) => (
                    <div
                        class="p-6 h-40 rounded-2xl border border-gray-700
                           bg-gradient-to-b from-gray-900/70 to-gray-800/70
                           backdrop-blur-sm
                           shadow-[0_0_25px_rgba(255,0,0,0.15)]
                           flex flex-col justify-center gap-2"
                    >
                        <p class="font-maximum text-gray-300 text-sm text-center underline">
                            {card.titulo}
                        </p>

                        <h3
                            class="text-2xl text-white text-center"
                            data-stat={card.key}
                        >
                            {card.valor}
                        </h3>
                    </div>
                ))
            }
        </div>
    </div>
</div>

<script type="module" src="/scripts/admin/adminEstadisticas.js"></script>
