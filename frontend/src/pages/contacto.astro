---
import Layout from "../layouts/Layout.astro";
import { PUBLIC_BACKEND_URL } from "../config/backend";
---

<Layout title="Contactanos">
    <main
        class="min-h-screen flex flex-col items-center justify-center bg-gray-950 pt-20 gap-10"
        style="padding-top: 40px;"
    >
        <form
            id="formContacto"
            method="POST"
            action="#"
            class="w-full max-w-xl mt-16"
            data-backend-url={PUBLIC_BACKEND_URL}
        >
            <fieldset
                class="w-full min-h-[500px] flex flex-col items-center gap-5
                    rounded-3xl border border-gray-800
                    bg-gradient-to-b from-gray-950 via-gray-900 to-gray-950
                    text-white shadow-[0_0_40px_rgba(255,0,0,0.15)]
                    px-12 py-20"
                style="
                    padding-top: 30px;
                    padding-bottom: 10px;"
            >
                <legend class="sr-only">Contactanos</legend>

                <h2
                    class="text-4xl font-semibold text-red-400 tracking-wide mb-4"
                >
                    Contactanos
                </h2>

                <div class="flex flex-col items-center gap-2 w-full">
                    <label for="contacto-nombre" class="text-xl text-gray-300">
                        Nombre *
                    </label>
                    <input
                        id="contacto-nombre"
                        type="text"
                        name="nombre"
                        placeholder="Introduce tu nombre"
                        class="w-3/4 py-5 px-6 rounded-3xl border border-gray-700 bg-gray-800/80 text-white
                            placeholder-gray-500 text-lg
                            focus:border-red-400 focus:ring-2 focus:ring-red-500/40 focus:outline-none
                            transition duration-300"
                    />
                </div>
                <p
                    id="contacto-error-nombre"
                    class="text-red-500 text-xs md:text-sm h-4"
                >
                </p>

                <div class="flex flex-col items-center gap-2 w-full mt-2">
                    <label for="contacto-email" class="text-xl text-gray-300">
                        Correo electrónico *
                    </label>
                    <input
                        id="contacto-email"
                        type="email"
                        name="email"
                        placeholder="Introduce tu correo electrónico"
                        class="w-3/4 py-5 px-6 rounded-3xl border border-gray-700 bg-gray-800/80 text-white
                            placeholder-gray-500 text-lg
                            focus:border-red-400 focus:ring-2 focus:ring-red-500/40 focus:outline-none
                            transition duration-300"
                    />
                </div>
                <p
                    id="contacto-error-email"
                    class="text-red-500 text-xs md:text-sm h-4"
                >
                </p>

                <div class="flex flex-col items-center gap-2 w-full mt-2">
                    <label for="contacto-mensaje" class="text-xl text-gray-300">
                        Mensaje *
                    </label>

                    <textarea
                        id="contacto-mensaje"
                        name="mensaje"
                        rows="4"
                        placeholder="Introduce un mensaje..."
                        class="w-3/4 py-4 px-6 rounded-2xl border border-gray-700 bg-gray-800/80 text-white
                            placeholder-gray-500 text-lg
                            focus:border-red-400 focus:ring-2 focus:ring-red-500/40 focus:outline-none
                            transition duration-300 resize-none"
                    ></textarea>
                </div>
                <p
                    id="contacto-error-mensaje"
                    class="text-red-500 text-xs md:text-sm h-4"
                >
                </p>

                <button
                    id="btnContacto"
                    type="submit"
                    class="mt-6 w-1/3 block bg-red-500 hover:bg-red-600
                        text-white font-semibold text-xl py-4 px-10 rounded-full
                        transition-transform duration-300 hover:scale-105
                        shadow-[0_0_25px_rgba(255,0,0,0.4)]"
                >
                    Enviar mensaje
                </button>

                <p
                    id="contacto-mensaje-estado"
                    class="text-green-500 text-center mt-4 h-5"
                >
                </p>

                <p class="text-center text-gray-400 text-sm mt-2">
                    * Todos los campos son obligatorios.
                </p>
            </fieldset>
        </form>
        <script type="module" src="/scripts/contacto/contacto.js"></script>
    </main>
</Layout>
