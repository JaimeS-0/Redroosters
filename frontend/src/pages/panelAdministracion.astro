---
import Layout from "../layouts/Layout.astro";

import ArtistasPanel from "../components/panelAdmin/ArtistasPanel.astro";
import CancionesPanel from "../components/panelAdmin/CancionesPanel.astro";
import AlbumPanel from "../components/panelAdmin/AlbumPanel.astro";
import EstadisticasPanel from "../components/panelAdmin/EstadisticasPanel.astro";
---

<Layout title="Panel de Administracion">
    <main
        class="bg-black min-h-screen
               w-full
               overflow-x-hidden
               flex flex-col lg:flex-row
               items-start lg:items-center
               justify-start
               gap-8 lg:gap-30"
    >
        <div class="block lg:hidden h-28"></div>

        <!-- MENU -->
        <div
            class="lg:translate-x-30 inline-block
           w-full lg:w-[320px]
           rounded-3xl border border-gray-700
           bg-gradient-to-b from-gray-800 to-gray-700
           px-0 py-0
           shadow-[0_0_35px_rgba(255,0,0,0.15)]
           overflow-hidden
           gap-12"
        >
            <div class="h-5"></div>

            <div class="relative flex justify-center pt-6">
                <span
                    class="font-maximum text-4xl text-red-600 absolute translate-x-[4px] translate-y-[3px] select-none"
                    aria-hidden="true"
                >
                    MENÚ
                </span>
                <span class="font-maximum text-4xl text-white relative">
                    MENÚ
                </span>
            </div>

            <div class="h-10"></div>

            <!-- Menu para cambiar vista -->
            <ul class="flex flex-col w-full divide-y border-b text-white">
                <li>
                    <button
                        type="button"
                        data-target="vista-artistas"
                        class="w-full py-6 text-2xl font-maximum text-white hover:bg-gray-600/30 cursor-pointer sidebar-btn active"
                    >
                        ARTISTA
                    </button>
                </li>
                <li>
                    <button
                        type="button"
                        data-target="vista-canciones"
                        class="w-full py-6 text-2xl font-maximum text-white hover:bg-gray-600/30 cursor-pointer sidebar-btn"
                    >
                        CANCIÓN
                    </button>
                </li>
                <li>
                    <button
                        type="button"
                        data-target="vista-albums"
                        class="w-full py-6 text-2xl font-maximum text-white hover:bg-gray-600/30 cursor-pointer sidebar-btn"
                    >
                        ÁLBUM
                    </button>
                </li>
                <li>
                    <button
                        type="button"
                        data-target="vista-estadisticas"
                        class="w-full py-6 text-2xl font-maximum text-white hover:bg-gray-600/30 cursor-pointer sidebar-btn"
                    >
                        ESTADÍSTICAS
                    </button>
                </li>
            </ul>
            <div class="h-6"></div>
        </div>

        <!-- CONTENIDO -->
        <section
            id="contenido"
            class="flex-1 w-full
                   min-h-[60vh]
                   flex items-center justify-center
                   mt-6 lg:mt-0"
        >
            <!-- Tarjeta central -->
            <div
                class="w-full max-w-5xl min-h-[60vh]
                       rounded-2xl border border-gray-700
                       bg-gradient-to-b from-gray-900/60 to-gray-800/60
                       backdrop-blur-sm
                       shadow-[0_0_40px_rgba(255,0,0,0.18)]
                       p-6 sm:px-8 sm:py-8 lg:p-10
                       scale-100 lg:scale-[1.05]"
            >
                <div id="vista-artistas" class="flex w-full justify-center">
                    <ArtistasPanel base="/api/admin/artistas" />
                </div>

                <div id="vista-canciones" class="hidden w-full justify-center">
                    <CancionesPanel base="/api/admin/cancion/archivo" />
                </div>

                <div id="vista-albums" class="hidden w-full">
                    <AlbumPanel base="/api/admin/album" />
                </div>

                <div id="vista-estadisticas" class="hidden w-full">
                    <EstadisticasPanel base="/api/admin/estadisticas" />
                </div>
            </div>
        </section>

        <!-- MODAL GENERICA ELIMINAR -->
        <div
            id="deleteModal"
            tabindex="-1"
            class="hidden fixed inset-0 z-50
                   justify-center items-center
                   w-full h-full
                   bg-black/60 backdrop-blur-sm"
        >
            <div class="w-full max-w-md mx-auto px-6 sm:px-8 my-16 sm:my-24">
                <div
                    class="relative bg-gradient-to-b from-gray-950 to-gray-900 rounded-3xl
                           shadow-[0_0_35px_rgba(255,0,0,0.15)]
                           border border-red-500/30 text-white"
                >
                    <button
                        id="deleteClose"
                        type="button"
                        class="absolute top-4 right-4 text-gray-400 hover:text-red-400 transition-colors"
                    >
                        ✕
                    </button>

                    <div
                        class="px-10 pt-16 pb-16 md:px-12 md:pt-20 md:pb-20
                               text-center flex flex-col items-center gap-8"
                    >
                        <h3
                            id="deleteModalTitle"
                            class="text-2xl font-semibold"
                        >
                            Eliminar
                        </h3>

                        <p
                            id="deleteModalText"
                            class="text-gray-400 leading-relaxed text-base max-w-sm mb-8"
                        >
                            ¿Seguro que quieres eliminar el elemento
                            seleccionado?
                        </p>

                        <div
                            class="flex flex-col sm:flex-row gap-4 justify-center w-full mt-4 mb-4"
                        >
                            <button
                                id="deleteCancel"
                                type="button"
                                class="flex-1 px-5 py-3 rounded-lg border border-gray-600
                                       bg-gray-800 hover:bg-gray-700 text-gray-200 font-medium transition-all"
                            >
                                Cancelar
                            </button>
                            <button
                                id="deleteConfirm"
                                type="button"
                                class="flex-1 px-5 py-3 rounded-lg bg-red-600 hover:bg-red-700
                                       focus:ring-4 focus:ring-red-500/40 text-white font-semibold transition-all"
                            >
                                Sí, eliminar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script type="module" src="/src/scripts/admin/MenuLateralPanel"></script>
    <script src="/src/scripts/admin/ModalEliminar.js" defer></script>
</Layout>
